{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "api-key-manager",
  "version": "0.1.0",
  "identifier": "com.hongyu-li.api-key-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:61820",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "API Key Manager",
        "width": 800,
        "height": 600,
        "visible": false,
        "decorations": true
      },
      {
        "label": "floating-toolbar",
        "title": "Floating Toolbar",
        "width": 400,
        "height": 80,
        "decorations": false,
        "skipTaskbar": false,
        "transparent": true,
        "hiddenTitle": true,
        "visible": true,
        "alwaysOnTop": true,
        "center": false,
        "x": null,
        "y": 200,
        "shadow": false,
        "theme": "Light",
        "acceptFirstMouse": false,
        "dragDropEnabled": false,
        "resizable": false,
        "minimizable": true,
        "maximizable": false,
        "closable": true,
        "url": "/",
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "visibleOnAllWorkspaces": false,
        "contentProtected": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:11434; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}